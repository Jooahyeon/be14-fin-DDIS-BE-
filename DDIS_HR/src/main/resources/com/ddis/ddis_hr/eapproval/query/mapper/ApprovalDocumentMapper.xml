<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ddis.ddis_hr.eapproval.query.mapper.ApprovalDocumentMapper">

    <resultMap id="DocumentMap" type="com.ddis.ddis_hr.eapproval.query.dto.DocumentDTO">
        <id     column="doc_id"       property="docId"/>
        <result column="doc_title"     property="title"/>
        <result column="created_at"    property="createdAt"/>
        <result column="submitted_at"  property="submittedAt"/>
        <result column="doc_status"    property="status"/>
    </resultMap>

    <select id="selectDocumentsByApprover" resultMap="DocumentMap">
        SELECT d.doc_id,
        d.doc_title,
        d.created_at,
        d.submitted_at,
        d.doc_status
        FROM draft_documents d
        INNER JOIN approval_line al
        ON d.doc_id = al.doc_id
        WHERE al.employee_id = #{employeeId}
        ORDER BY d.submitted_at DESC
    </select>

</mapper>